<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="15dp"
    android:paddingBottom="15dp"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:background="#9CCC65"
    android:fitsSystemWindows="true"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.gabrielnicolae.weatherapp.MainActivity"
    tools:showIn="@layout/activity_main">

    <TextView
        android:id="@+id/cityText"
        android:textColor="#fff"
        android:text="Bucharest,RO"
        android:layout_centerHorizontal="true"
        android:textSize="35sp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/Icon"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="#ffff"
        android:layout_below="@+id/cityText"
        android:layout_marginTop="10dp" />

    <TextView
        android:id="@+id/tempText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/cityText"
        android:text="0"
        android:textColor="#fff"
        android:textSize="30sp"
        android:textStyle="normal"
        android:layout_marginTop="40dp" />

    <TextView
        android:id="@+id/windText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Icon"
        android:text="Vânt "
        android:textColor="#fff"
        android:textSize="25sp"
        android:layout_marginTop="25dp" />

    <TextView
        android:id="@+id/cloudText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/windText"
        android:text="Nori "
        android:textColor="#fff"
        android:textSize="25sp"
        android:layout_marginTop="5dp" />

    <TextView
        android:id="@+id/presText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cloudText"
        android:text="Presiune "
        android:textColor="#fff"
        android:textSize="25sp"
        android:layout_marginTop="5dp" />

    <TextView
        android:id="@+id/humText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/presText"
        android:text="Umiditate "
        android:textColor="#fff"
        android:textSize="25sp"
        android:layout_marginTop="5dp" />

    <TextView
        android:id="@+id/riseText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/humText"
        android:text="Răsarit "
        android:textColor="#fff"
        android:textSize="25sp"
        android:layout_marginTop="5dp" />

    <TextView
        android:id="@+id/sunsetText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/riseText"
        android:text="Apus "
        android:textColor="#fff"
        android:textSize="25sp"
        android:layout_marginTop="5dp" />

    <TextView
        android:id="@+id/updateText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sunsetText"
        android:text="Ultimul update "
        android:layout_centerHorizontal="true"
        android:textColor="#fff"
        android:textSize="20sp"
        android:layout_marginTop="50dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sunsetText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:textSize="20sp"
        android:text="Evoluție"
        android:id="@+id/graph" />

</RelativeLayout>
